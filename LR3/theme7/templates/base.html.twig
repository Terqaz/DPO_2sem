<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="d-flex flex-wrap justify-content-end align-items-center p-3 mb-4 border-bottom">
            <ul class="nav nav-pills align-items-center">
                {% if app.user %}
                    <li class="nav-item" style="margin-right: 10px;">
                        <h4 class="m-md-0"> Привет, {{ app.user.email }} </h4>
                    </li>
                    <li class="nav-item"><a href="{{ path('app_logout') }}" class="btn btn-primary">
                            Выход
                        </a></li>
                {% else %}
                    <li class="nav-item"><a href="{{ path('app_login') }}" class="btn btn-primary me-3">
                            Вход
                        </a></li>
                    <li class="nav-item"><a href="{{ path('app_register') }}" class="btn btn-outline-primary">
                            Регистрация
                        </a></li>
                {% endif %}
            </ul>
        </header>
        <div class="container p-4" style="max-width: 1000px">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
