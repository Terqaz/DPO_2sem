{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>CoverUrl</th>
                <td>{{ book.coverUrl }}</td>
            </tr>
            <tr>
                <th>FileUrl</th>
                <td>{{ book.fileUrl }}</td>
            </tr>
            <tr>
                <th>DateRead</th>
                <td>{{ book.dateRead ? book.dateRead|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="/{{ book.fileUrl }}" class="btn btn-outline-dark">Скачать</a>
    <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
    <a href="{{ path('app_book_index') }}">back to list</a>


    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
